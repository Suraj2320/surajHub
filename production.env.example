# ========== PRODUCTION ENVIRONMENT ==========
# NEVER commit this file - use AWS Secrets Manager instead

# === Database (AWS RDS) ===
DATABASE_URL=postgresql://surajhub_admin:SECURE_PASSWORD@surajhub-prod-db.xxxxxx.us-east-1.rds.amazonaws.com:5432/surajhub_prod
PGHOST=surajhub-prod-db.xxxxxx.us-east-1.rds.amazonaws.com
PGPORT=5432
PGUSER=surajhub_admin
PGPASSWORD=SECURE_PASSWORD
PGDATABASE=surajhub_prod

# === Session & Security ===
SESSION_SECRET=generate_with_$(openssl rand -base64 32)_minimum_32_chars_required

# === Payment (Stripe Production) ===
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_KEY_HERE
STRIPE_PUBLIC_KEY=pk_live_YOUR_PRODUCTION_KEY_HERE

# === AWS Configuration ===
NODE_ENV=production
AWS_REGION=us-east-1
AWS_ECR_REGISTRY=ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com

# === Server ===
PORT=3000
LOG_LEVEL=info

# === Redis (AWS ElastiCache) ===
REDIS_URL=redis://surajhub-redis.xxxxxx.ng.0001.use1.cache.amazonaws.com:6379

# === Monitoring ===
ENABLE_CLOUDWATCH_LOGS=true
ENABLE_X_RAY_TRACING=true
